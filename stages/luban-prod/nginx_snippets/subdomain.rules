set $jumpCountry '';
#直接访问国家站是不跳转的, 只有访问主站才跳, 任何地方访问其他小站都不跳
if ($subsite = 'com') {
    set $jumpCountry "${jumpCountry}true";
}
if ($suffix != $subsite) {
   set $jumpCountry "${jumpCountry}true";
}

if ($domainname != "veryvoga") {
    set $jumpCountry false;
}

if ($request_uri ~* ^(.*)/adyen_notify.php(.*)$) {
    set $jumpCountry false;
}

if ($request_uri ~* ^(.*)/dotpay_notify.php(.*)$) {
    set $jumpCountry false;
}

if ($request_uri ~* ^(.*)/dlocal_notify.php(.*)$) {
    set $jumpCountry false;
}

if ($request_uri ~* ^(.*)/gc_notify.php(.*)$) {
    set $jumpCountry false;
}

if ($request_uri ~* apis/app/fcmtoken) {
    set $jumpCountry false;
}

if ($http_user_agent ~* "facebookexternalhit|Facebot") {
    set $jumpCountry false;
}
