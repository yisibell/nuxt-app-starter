location ^~ /apis/ {
    rewrite ^/apis/personalize/.*$ /personalize.rest.php last;
 	rewrite ^/apis/shipment/.*$ /shipment.rest.php last;
    rewrite ^/apis/outofstock/.*$ /outofstock.rest.php last;
    rewrite ^/apis/refund/.*$ /refund.rest.php last;
    rewrite ^/apis/([^/]+)$ /$1.rest.php last;
    rewrite ^/apis/([^/]+)/.*$ /$1.rest.php last;
}
location ~* /shipment\.rest\.php$ {
    fastcgi_pass   127.0.0.1:9000;
    fastcgi_index  index.php;
    fastcgi_param  APP_FS_ROOT $prjroot;
    fastcgi_param  OPCACHE $opcode_cache;
    include        fastcgi_params;
    fastcgi_param  SCRIPT_FILENAME  "$prjroot/src/php/webapp/api$fastcgi_script_name";
}
